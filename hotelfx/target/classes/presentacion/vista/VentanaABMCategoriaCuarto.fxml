<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="bordePrincipal" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentacion.controlador.ControladorABMCategoriaCuarto">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="900.0">
         <top>
            <Pane prefHeight="70.0" prefWidth="622.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnRefrescar" layoutX="604.0" layoutY="20.0" mnemonicParsing="false" onAction="#refrescarTabla" prefHeight="30.0" prefWidth="100.0" text="Refrescar" />
               </children>
            </Pane>
         </top>
         <left>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView fx:id="tablaCategoriaCuarto" layoutX="-3.0" prefHeight="460.0" prefWidth="507.0">
                    <columns>
                      <TableColumn fx:id="id" prefWidth="64.0" text="ID" />
                      <TableColumn fx:id="nombre" prefWidth="144.0" text="Nombre" />
                        <TableColumn fx:id="detalle" prefWidth="298.0" text="Detalle" />
                    </columns>
                  </TableView>
               </children>
            </Pane>
         </center>
         <bottom>
            <Pane prefHeight="70.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnAgregar" layoutX="195.0" layoutY="14.0" mnemonicParsing="false" onAction="#addCategoria" prefHeight="30.0" prefWidth="120.0" text="Agregar Categoria" />
                  <Button fx:id="btnEditar" layoutX="324.0" layoutY="14.0" mnemonicParsing="false" onAction="#EditCategoria" prefHeight="30.0" prefWidth="120.0" text="Editar Categoria" />
                  <Button fx:id="btnBorrar" layoutX="584.0" layoutY="14.0" mnemonicParsing="false" onAction="#eliminarCategoria" prefHeight="30.0" prefWidth="120.0" text="Borrar Categoria" />
               </children>
            </Pane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
